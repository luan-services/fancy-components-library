{
  "name": "fancy-ui-ts",
  "version": "1.0.0",
  "type": "module",
  "description": "A library to easily create cool and customizable webcomponents.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css", 
  "sideEffects": [
    "./src/styles/index.ts",
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts", // let users import types by: import { Combobox } from 'fancy-ui-ts/index.d.ts';
      "import": "./dist/index.js" // let users import components by: import { defineCombobox } from 'fancy-ui-ts';
    },
    "./styles.css": "./dist/index.css" // let users import style by: import 'fancy-ui-ts/styles.css'; 
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup", 
    "build:watch": "tsup --watch"
  },
  "author": "Luan Peixoto",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.0"
  }
}